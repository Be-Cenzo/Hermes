<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hermes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/blue_700</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- colore dell'icona selezionata -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <!-- colore del background del popup -->
        <item name="colorSecondaryVariant">@color/blue_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorSurface" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>