<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.translate.TranslateFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:rotationX="180"
        android:rotationY="180"
        android:padding="6dp">

        <be.cenzo.hermes.ui.translate.CustomSpinner
            android:id="@+id/menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editText_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:hint="Start Speaking"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/play_1"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:text="O"
                    app:cornerRadius="50dp"
                    android:layout_margin="6dp"/>

                <Button
                    android:id="@+id/cancel_1"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:text="X"
                    app:cornerRadius="50dp"
                    android:layout_margin="6dp" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="6dp">

        <be.cenzo.hermes.ui.translate.CustomSpinner
            android:id="@+id/menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editText_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:hint="Start Speaking" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/play_2"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:text="O"
                    app:cornerRadius="50dp"
                    android:layout_margin="6dp" />

                <Button
                    android:id="@+id/cancel_2"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:text="X"
                    app:cornerRadius="50dp"
                    android:layout_margin="6dp" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>